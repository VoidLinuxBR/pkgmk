build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/opt/samba
	make W=1 -j$(nproc)
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir" install
}
