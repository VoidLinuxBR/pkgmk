pkgname=samba
pkgbase=samba
pkgdesc="SMB/CIFS file, print, and login server for Unix"
pkgver=4.23.4
pkgrel=1
arch=(x86_64)
license=('GPL-3.0-or-later')
url="https://www.samba.org"
source=(https://download.samba.org/samba/ftp/stable/${pkgbase}-${pkgver}.tar.gz)
